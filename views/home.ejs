
<%- include('partials/header.ejs') %>

    <h1>Home</h1>

    <p><%= homeStartingContent %></p>

    <% posts.forEach(function(post) { %> 
        <h1> <%= post.title %> </h1>
        <% let maxCharacters = 100; %> 

        <% if (post.body.length > maxCharacters){ %> 
            <% let truncatedBody = post.body.slice(0, maxCharacters-1); %> 
            <p> <%= truncatedBody %> ...</p>
        <% } else { %> 
            <p> <%= post.body %> </p>
        <% } %> 
       

    <% }); %> 


